extends ../layout

block content
  h1 Books
  p 
    a(href='/books/new', class="button") Create New Book

  if books.length
    table 
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href='/books/update/' + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.year